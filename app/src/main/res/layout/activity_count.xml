<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/count_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szh.enliarith.activity.CountActivity">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_back"
        android:alpha="0.8"
        android:background="@drawable/circle_button_bg"
        android:layout_margin="@dimen/activity_horizontal_margin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <TextView
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/count_option"
        android:textSize="@dimen/option_textview_size"
        android:textColor="@color/light_yellow_color"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowColor="@android:color/black"
        android:shadowRadius="1"
        android:background="@drawable/count_option_bg"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="99" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/minus_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:switchMinWidth="@dimen/count_switch_minwidth"
            android:checked="true"
            android:typeface="normal"
            android:background="@null"
            app:theme="@style/MinusSwitch"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.szh.enliarith.customview.RecyclerFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/num_recyclerview"
                android:layout_width="@dimen/count_recyclerview_width"
                android:layout_height="@dimen/count_recyclerview_height"
                android:padding="4dp"
                android:background="@drawable/count_recyclerview_bg"/>
            <View
                android:layout_width="@dimen/count_recyclerview_width"
                android:layout_height="@dimen/count_recyclerview_height"
                android:padding="4dp"
                android:background="@drawable/count_override_bg"/>
        </com.szh.enliarith.customview.RecyclerFrameLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/plus_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:switchMinWidth="@dimen/count_switch_minwidth"
            android:checked="false"
            android:typeface="normal"
            android:background="@null"
            app:theme="@style/PlusSwitch"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/count_textview_horizontal_margin">
        <TextView
            android:id="@+id/minus_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/count_textview_horizontal_margin"
            android:drawableTop="@drawable/ic_minus"
            android:text="@string/minus_count"
            android:textSize="@dimen/count_textview_size"
            android:textColor="@color/color_Pink"
            android:background="@drawable/count_text_button_selector"/>
        <TextView
            android:id="@+id/plus_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/count_textview_horizontal_margin"
            android:drawableTop="@drawable/ic_plus"
            android:text="@string/plus_count"
            android:textSize="@dimen/count_textview_size"
            android:textColor="@color/color_Pink"
            android:background="@drawable/count_text_button_selector"/>
    </FrameLayout>
</LinearLayout>
